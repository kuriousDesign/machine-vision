# MQTT broker
MQTT_HOST=broker
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# MongoDB
MONGODB_URI=mongodb://root:example@mongodb:27017
MONGODB_DB=machine
MONGODB_COLLECTION=parts

# File storage root (mounted volume in Docker)
STORAGE_ROOT=/data/videos

# Cameras (comma separated list of device identifiers or URIs)
# For USB cameras on Linux use device indices like 0,1,2 (they are interpreted as ints)
# For ethernet/rtsp use full URI like rtsp://192.168.1.10/stream
CAMERA_SOURCES=0,1,2

# Service settings
POLL_PERIOD_SECONDS=5
